<% 
const authors = {}; 
site.posts.data.forEach((p) => { 
  const { author } = p;  
  if (!author) return;  
  if (author in authors) authors[author] += 1;  
  else authors[author] = 1;  
});  
%>
<div class="widget-wrap">
  <h3 class="widget-title">Autores</h3>

  <div class="widget">
    <ul class="tag-list" itemprop="keywords">
      <% 
      Object.keys(authors).sort().forEach((author) => { %>
      <li class="tag-list-item">
        <a
          class="tag-list-link"
          href="<%= url_for(authors/${slugify(author)}.html) %>"
          rel="tag"
          ><%= author %><span class="author-list-count"><%= authors[author] %></span>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>
</div>
